# Server
PORT=3000

# Logging
# Available Nest log levels: log,error,warn,debug,verbose,fatal
LOG_LEVELS=log,error,warn

# CORS
# Comma-separated list or * for all
CORS_ORIGINS=*
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE,OPTIONS
CORS_CREDENTIALS=true

# API
API_PREFIX=api
# uri | header
VERSIONING_STRATEGY=uri
API_VERSION=1
VERSION_HEADER=Accept-Version

# Swagger
ENABLE_SWAGGER=true
SWAGGER_TITLE=API
SWAGGER_DESC=API documentation for api
SWAGGER_VERSION=1.0
SWAGGER_PATH=docs

# MongoDB
# Créez un compte gratuit sur https://www.mongodb.com/cloud/atlas
# Format: mongodb+srv://username:password@cluster.mongodb.net
MONGO_URI=mongodb+srv://your_username:your_password@your_cluster.mongodb.net
MONGO_DB_NAME=sen_pointage

# Rate limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Auth / JWT
# Générez une clé secrète avec: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=1d

# Seeder: Super Admin
SUPERADMIN_EMAIL=your_admin_email@example.com
SUPERADMIN_PASSWORD=YourStrongPassword123!
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin
SUPERADMIN_ROLES=superadmin
SUPERADMIN_PERMISSIONS=*

# Redis
# Pour le développement local: localhost
# Pour la production: votre instance Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_here
REDIS_DB=0

# Mailjet (Email Service)
# Obtenez vos clés API sur https://www.mailjet.com
# 1. Créez un compte gratuit sur Mailjet
# 2. Allez dans Account Settings > API Keys Management
# 3. Copiez votre API Key et Secret Key
MAILJET_API_KEY=your_mailjet_api_key_here
MAILJET_API_SECRET=your_mailjet_secret_key_here
MAILJET_FROM_EMAIL=contact@votredomaine.com
MAILJET_FROM_NAME=Sen Pointage

# Frontend URL (pour les liens dans les emails)
# Développement: http://localhost:5173
# Production: https://votredomaine.com
FRONTEND_URL=http://localhost:5173
FRONTEND_RESET_PASSWORD_URL=http://localhost:5173/reset-password

# MinIO Configuration (File Storage)
# Pour le développement local
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=your_minio_access_key
MINIO_SECRET_KEY=your_minio_secret_key
MINIO_DEFAULT_BUCKET=senpointage-files

# Face Recognition API (Naratech)
# Contactez votre fournisseur d'API pour obtenir ces informations
FACE_RECOGNITION_API_URL=http://your_api_url:port
FACE_RECOGNITION_API_KEY=your_api_key_here

